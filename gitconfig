[user]
    name = Jason Hoch
    email = jrshoch@gmail.com

[alias]
    st = status
    ci = commit -v
    ce = ci --amend
    last = log -1
    recent = log --oneline -5
    co = checkout
    sh = stash
    hlog = log --date-order --graph --format=\"%C(green)%H%Creset %C(yellow)%an%Creset %C(blue bold)%ad%Creset %C(red bold)%d%Creset%s\"
    alog = log --date-order --all --graph --format=\"%C(green)%H%Creset %C(yellow)%an%Creset %C(blue bold)%ad%Creset %C(red bold)%d%Creset%s\"

# From http://nathanhoad.net/how-to-colours-in-git - thanks!
[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
